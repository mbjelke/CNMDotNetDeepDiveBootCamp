@model Phones.Models.PhoneMfgViewModel

@{
    ViewData["Title"] = "Phones";
}

<h2>Index</h2>
<form asp-controller="Phones" asp-action="Index">
    <p>
        OS:   <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
        @*THIS IS THE SELECT LIST CODE, give the word ALL a value of "" *@
        Mfg:  <select asp-for="phoneMfg" asp-items="Model.mfgs">
            <option value="">All</option>
        </select>
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*have to add .phones[0] because we added a view model.  The model was a list before, now there is another layer so we have to be specific*@
                @Html.DisplayNameFor(model => model.phones[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].CameraPix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Mfg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phones[0].Release)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*have to change how we are referring to the data because we created a view model*@
        @foreach (var item in Model.phones)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CameraPix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mfg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Release)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
